##############################################
# üîó PostgreSQL Database Configuration
##############################################

# Nombre de usuario de PostgreSQL
POSTGRES_USER=your_username

# Contrase√±a del usuario de PostgreSQL
POSTGRES_PASSWORD=your_password

# Nombre de la base de datos que se crear√° al iniciar el contenedor
POSTGRES_DB=your_database

##############################################
# üß¨ Prisma Connection String
##############################################

# Cadena de conexi√≥n usada por Prisma para conectarse a PostgreSQL
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/your_database

##############################################
# üîê JWT Access Token Configuration
##############################################

# Clave secreta para firmar el token de acceso (¬°mant√©n esto seguro!)
JWT_SECRET=your_jwt_secret_key

# Tiempo de expiraci√≥n del token de acceso (ej: 15m, 1h, 2d)
JWT_EXPIRES_IN=15m

##############################################
# üîÅ JWT Refresh Token Configuration
##############################################

# Clave secreta para firmar el refresh token (diferente al access token)
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# Tiempo de expiraci√≥n del refresh token (ej: 7d, 30d)
JWT_REFRESH_EXPIRES_IN=30d
